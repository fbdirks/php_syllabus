<?php
  
//----------------------------------------------------
//$debug = false;
$debug = true;
//----------------------------------------------------

/* 
  Alle onderstaande functies werken alleen als
  $debug true is
*/


// deze code laat de inhoud van een lijst zien
function toon_lijst($lijst) {
  global $debug;
  if ($debug) {
    print "<pre>";
    print_r($lijst);
    print "</pre>";
  }
}




